<Window x:Class="AccommodationSystem.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:AccommodationSystem.Services"
        Title="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=PayTitle}"
        Width="560" Height="880"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=PayTitle}"
                   FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,20"/>

        <!-- 宿泊情報カード -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblGuestName}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="GuestNameText" Style="{StaticResource ValueText}" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblResNumber}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="ResNumText" Style="{StaticResource ValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblCheckin}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="CheckinText" Style="{StaticResource ValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblCheckout}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="CheckoutText" Style="{StaticResource ValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblPersons}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="PersonsText" Style="{StaticResource ValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblNights}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="NightsText" Style="{StaticResource ValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblRoomRate}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="RoomRateText" Style="{StaticResource ValueText}"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblTaxPerPerson}"
                               Style="{StaticResource FieldLabel}"/>
                    <TextBlock x:Name="TaxPerPersonText" Style="{StaticResource ValueText}"/>
                </StackPanel>

                <!-- 税額ハイライト -->
                <Border Grid.Row="4" Grid.ColumnSpan="2"
                        Background="#EBF4FF" CornerRadius="6" Padding="16,12">
                    <Grid>
                        <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblTaxTotal}"
                                   FontSize="14" Foreground="{StaticResource PrimaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TaxAmountText" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- 支払い済みの場合のメッセージ -->
        <Border x:Name="AlreadyPaidBorder" Grid.Row="2" Visibility="Collapsed"
                Background="#D1FAE5" CornerRadius="6" Padding="16,12" Margin="0,0,0,16">
            <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=AlreadyPaid}"
                       FontSize="14" FontWeight="Bold" Foreground="#065F46"/>
        </Border>

        <!-- カード入力エリア -->
        <Border x:Name="PaymentPanel" Grid.Row="3" Style="{StaticResource CardBorder}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=CardTitle}"
                           FontSize="16" FontWeight="Bold"
                           Margin="0,0,0,16" Foreground="{StaticResource TextPrimaryBrush}"/>

                <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblCardNum}"
                           Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="CardNumberBox" Margin="0,0,0,12"
                     MaxLength="19" Style="{StaticResource PlaceholderTextBox}" Tag="1234 5678 9012 3456"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblExpiry}"
                                   Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ExpBox" MaxLength="5" Style="{StaticResource PlaceholderTextBox}" Tag="MM/YY"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblCvc}"
                                   Style="{StaticResource FieldLabel}"/>
                        <PasswordBox x:Name="CvcBox" MaxLength="4"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblCardName}"
                           Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="CardNameBox" Style="{StaticResource PlaceholderTextBox}" Tag="TARO YAMADA"/>

                <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=StripeNote}"
                           FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>

        <!-- ボタン -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Content="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=BtnCancel}"
                    Style="{StaticResource DangerButton}"
                    Click="CancelButton_Click"/>
            <Button x:Name="PayButton" Grid.Column="2"
                    Style="{StaticResource SuccessButton}"
                    Click="PayButton_Click"/>
        </Grid>
    </Grid>
</Window>
