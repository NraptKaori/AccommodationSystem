<Window x:Class="AccommodationSystem.Views.ReceiptEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:AccommodationSystem.Services"
        Title="Receipt"
        Width="460" Height="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Border Margin="16" Style="{StaticResource CardBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title managed entirely by code-behind (changes for re-issue + language) -->
            <TextBlock Grid.Row="0" x:Name="TitleText"
                       FontSize="17" FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>

            <!-- 宿泊者情報サマリー (code-behind) -->
            <Border Grid.Row="1" Background="#EBF4FF" CornerRadius="6" Padding="12,8" Margin="0,0,0,12">
                <TextBlock x:Name="ReservationSummary" FontSize="12"
                           Foreground="{StaticResource PrimaryBrush}"/>
            </Border>

            <StackPanel Grid.Row="2">
                <TextBlock Text="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=LblEmail}"
                           Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="EmailBox" Margin="0,0,0,4"
                         Style="{StaticResource PlaceholderTextBox}" Tag="example@email.com"/>
                <TextBlock x:Name="StatusText" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Content="{Binding Source={x:Static svc:LocalizationProxy.Instance}, Path=BtnSkip}"
                        Style="{StaticResource DangerButton}"
                        Click="SkipButton_Click"/>
                <!-- SendButton Content managed by code-behind -->
                <Button x:Name="SendButton" Grid.Column="2"
                        Style="{StaticResource SuccessButton}"
                        Click="SendButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
